# ============================================================
# ğŸ Base image
# ============================================================
FROM python:3.11-slim

# ============================================================
# ğŸ§° System-level dependencies
# ============================================================
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    && rm -rf /var/lib/apt/lists/*













RUN pip install reportlab









# ============================================================
# ğŸ§­ Working directory
# ============================================================
WORKDIR /app

# ============================================================
# ğŸ“¦ Python requirements
# ============================================================
COPY requirements.txt .
RUN pip install --upgrade pip && \
    pip install --default-timeout=100 --no-cache-dir -r requirements.txt -i https://pypi.org/simple

# ============================================================
# ğŸ“ Copy app code
# ============================================================
COPY . .

# ============================================================
# ğŸ” Firebase (compose mounts secrets/)
# ============================================================
COPY ./secrets/serviceAccountKey.json /app/secrets/serviceAccountKey.json

# ============================================================
# ğŸŒ Expose API port
# ============================================================
EXPOSE 8000

# ============================================================
# ğŸš€ Start FastAPI
# ============================================================
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
